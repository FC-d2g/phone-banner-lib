  "peerDependencies": {
    "react": "^18.3.1 || ^19.0.0",
    "react-dom": "^18.3.1 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "copyfiles": "^2.4.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sass": "^1.87.0",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "react",
    "banner",
    "mobile",
    "library"
  ],
  "author": "Fábio Casalão",
  "license": "MIT"
}
