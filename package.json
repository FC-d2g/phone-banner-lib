{
  "name": "phone-banner-lib",
  "version": "1.2.3",
  "description": "A reusable PhoneBanner component for React.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build:scss": "sass src:dist --no-source-map",
